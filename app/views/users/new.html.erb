<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <form action="/users" method="POST">
		<input type="hidden" name="authenticity_token" placeholder=""Name" value="<%=form_authenticity_token%>">
		<input type="name" name="user[name]" placeholder="Name">
		<input type="email" name="user[email]" placeholder="Email">
		<input type="password" name="user[password]" placeholder="Password">
		<input type="password" name="user[password_confirmation]" placeholder="Password_Confirmation">
		<input type="submit" name="submit" class="Submit">
	</form>

	<div class="errors">
		<% if flash[:register_errors]%>
			<% flash[:register_errors].each do |error| %>
				<p><%=error%></p>
			<%end%>
		<%end%>
	</div>
	</div>
</div>
